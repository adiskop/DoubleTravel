<h1>Sign Up</h1> 

<%= form_for @user do |f| %>

<%= render partial: 'layouts/errors', locals: { object: @user } %>

<%= f.label :name %>
<%= f.text_field :name %>
<br><br>
<%= f.label :email %>
<%= f.email_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.submit "Submit" %>

<% end  %>

