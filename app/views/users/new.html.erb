<h1>Sign Up</h1> 

<%= form_for @user do |f| %>

<ul> <!-- .errors is a method where all errors are saved -->
<% @user.errors.full_messages.each do |error_message| %>
<li><%= error_message %></li>
<% end %>
</ul>

<%= f.label :name %>
<%= f.text_field :name %>
<br><br>
<%= f.label :email %>
<%= f.email_field :email %>
<br><br>
<%= f.label :password %>
<%= f.password_field :password %>
<br><br>
<%= f.submit "Submit" %>

<% end  %>